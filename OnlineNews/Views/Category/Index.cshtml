@model IEnumerable<OnlineNews.Models.Database.Category>

@{
    ViewData["Title"] = "Categories";
}

<div class="col-md-10">
    <br />

    <div class="row">
        <h2>Categories</h2>
    </div>
    @foreach (var category in Model)
