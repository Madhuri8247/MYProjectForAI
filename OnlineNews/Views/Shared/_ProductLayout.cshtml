
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ASAM WebShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OnlineNews.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Abril+Fatface" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <header class="text-white" style="background-color:rgb(130,5,2)">
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand" href="@Url.Action("Index", "Product")">
                    <span class="ms-2 btn btn-warning"><b>ASAM <sub>Online Shop</sub></b></span>
                </a>
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item mx-auto">
                        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index" style="background-color:blueviolet;"><b>ASAM News</b></a>
                    </li>
                </ul>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <form asp-Controller="Product" asp-action="SearchResult" class="d-flex gap-2">
                                <input type="text" name="searchitem" id="searchitem" class="form-control" placeholder="Search..." aria-label="Search">
                                <button class="btn btn-light" type="submit">
                                    <i class="fas fa-search"></i>
                                </button>
                            </form>
                        </li>
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Cart" asp-action="Index">
                                <i class="fas fa-shopping-cart fa-2x"></i> 
                                <span class="badge bg-warning" id="cartItemCount">@ViewData["CartItemCount"]</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <main role="main" class="container my-4">
        @RenderBody()
    </main>

    <footer class="text-white py-3" style="background-color:rgb(128,0,0);">
        <div class="text-center">
            <p class="mb-0">© 2025 OnlineNews. All rights reserved.</p>
            <a href="@Url.Action("Privacy", "Product")" class="text-white">Privacy Policy</a>
        </div>
    </footer>

    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>
