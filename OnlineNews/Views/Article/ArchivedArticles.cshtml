@model IEnumerable<OnlineNews.Models.Database.Article>



@{
    ViewData["Title"] = "ArchivedArticles";
}

<h3 class="row allfont custom-margin" style="text-align:center;color:green;border-bottom: 2px solid green"><b>Archived Articles</b></h3>

<div class="row justify-content-center allfont">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-lg-3 mb-3 justify-content-center">
            @foreach (var item in Model.Take(2))
            {
                <partial name="_EditorsPartial" model="item" />
            }
        </div>
        <div class="col-12 col-md-6 col-lg-6 mb-3 justify-content-center">
            @foreach (var item in Model.Skip(2).Take(2))
            {
                <partial name="_ArticlePartial" model="item" />
            }
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12 justify-content-center">
            @foreach (var item in Model.Skip(4).Take(2))
            {
                <partial name="_EditorsPartial" model="item" />
            }
        </div>
    </div>
</div>
<div class="row justify-content-center allfont">
    <div class="row justify-content-center">
        <div class="row justify-content-center">
            @foreach (var item in Model.Skip(6))
            {
                <div class="col-12 col-md-6 col-lg-3 mb-3">
                    <partial name="_EditorsPartial" model="item" />
                </div>
            }
        </div>
    </div>
</div>

<style>
    .custom-margin {
        margin-top: 2rem; /* You can adjust this value to suit your design */
        margin-bottom: 2rem; /* You can adjust this value to suit your design */
    }
</style>